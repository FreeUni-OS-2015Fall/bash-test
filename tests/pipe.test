#! /bin/bash

tmp_file1=$(mktemp)
ls -l /etc | tail -n +2 | sort > $tmp_file1

tmp_file2=$(mktemp)
$UNDER_TEST -c "ls -l /etc | tail -n +2 | sort" > $tmp_file2

cmp --silent $tmp_file1 $tmp_file2
cmp_status=$?
>&2 echo $tmp_file1
if [ "$cmp_status" != 0 ]; then
  >&2 echo "pipe results differ"
  exit 1
fi

rm $tmp_file2 $tmp_file1
exit 0
